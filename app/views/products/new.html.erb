<div id='product'>
<%= form_for(@product) do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
	<div class="field">
		<%= f.label :category %><br />
		<%= f.select :category_id, @categories.collect{|c|[c.name,c.id]}%>		
	</div>
	<div class="field">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= 'Price' %><br />
		<% @currencies.each do |c|%>
			<%= c.currency_symbol %>
			<%= text_field 'price', 'price'+c.id.to_s,:size=>5 %>	&nbsp;&nbsp;&nbsp;
		<% end %>
	</div>
	<div class="field">
		<%= f.label :avatar, 'Image'%><br />
		<%= f.file_field :avatar %>
	</div>
	<div class="field">
		<%= f.label :description%><br />
		<%= f.text_area :description, :size=>'40x5' %>
	</div>
	<div class="actions">
		<%= f.submit "Add Product" %>
	</div>
<% end %>
</div>
